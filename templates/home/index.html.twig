{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}EcoV
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row ">
			<div class='col-0 col-sm-2'></div>
			<div class="col-12 col-lg-5 fs-5 ">
				<div class="row">
					<div class="col-lg-12 p-2 p-lg-0">
						<h1 class='fw-bold ps-2 ps-lg-0'>EcoV</h1>
						<p class="fw-bold p-2 p-lg-0">
							Envi de faire un geste pour la planéte ? De vider vos placards trop plein ?
							<br>
							De trouver votre bonheur au coin de la rue ?
							<br>
							Vous êtes au bon endroit...
							<br>
							Vendez, donnez ou achetez entre voisins de Saint Pierre de lages !
							<br>
						</p>
					{# <a href="{{ path('catalogue') }}"  #}
						<button type="btn" class="btn-grad my-5  btn-lg btn fw-bold text-light text-uppercase">DECOUVRIR</button>
						</a>
					</div>
				</div>
				
				<div class='row '>
					<div class='col-3'></div>
					<div class="col-3">
						<img class="img img-fluid w-100" src="{{ asset('build/images/bul-bleu.ec66cd0d.svg')}}" alt="bulle-bleu">
					</div>
					<div class="col-4">
						<img class="img img-fluid w-100" src="{{ asset('build/images/bul-vert.68779c6b.svg')}}" alt="bulle-vert">
					</div>
					<div class='col-2'></div>
				</div>
				<div class='row '>
					<div class='col-5'></div>
					<div class="col-3">
						<img class="img img-fluid w-100" src="{{ asset('build/images/bul-rose.48a0b719.svg')}}" alt="bulle-rose">
					</div>
					<div class='col-4'></div>
				</div>
			</div>
			<div class='col-lg-3 d-none d-lg-block'>
				<img class="img img-fluid w-100" src="{{ asset('build/images/eglise.ca5401d2.png')}}" alt="eglise">
			</div>
			<div class='col-2'></div>
		</div>
		 <div class="container my-5 pb-5">
            <div class='row'>
                <div class="col-12 bg-light box p-3">
                    <div class='row'>
						<div class="col-12 col-lg-3">
                        <h4 class="fw-bold"> Filtrer... </h4>
                        {{ form_start(form) }}
							{{ form_row(form.string) }}
							{{ form_row(form.submit) }}
						</div>
						<div class="col-6 col-lg-3">
								{{ form_row(form.deal) }}
						</div>
						<div class="col-6 col-lg-3">
								{{ form_row(form.categories) }}
						</div>
				
                        {{ form_end(form) }}

                    </div> 
                </div>
            </div>
        </div>
		<div class="container mb-5 pb-5">
			<div class="row gy-4 ">
				{% for annonce in annonces %}
				<div class="col-lg-3 ">
					<a 
					href="{{ path('annonce', {'slug': annonce.slug}) }}" 
					class="text-dark text-decoration-none">
						<div class="card box-card box bg-light mx-auto " >
						
							<img src="{{ asset('uploads/images/' ~ annonce.image)|imagine_filter('carre') }}"alt="{{ annonce.name}}" class='img img-fluid w-100'>
							<div class="card-body">
								<a 
								href="{{ path('annonce', {'slug': annonce.slug}) }}"
								class="btn btn-grad btn-sm w-100 align-self-center fw-bold ">VOIR</a>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
